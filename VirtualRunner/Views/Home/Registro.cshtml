@model RegistroViewModel
@{
    ViewBag.Title = "Registro";
}

<div class="container-fluid">
    
    <h2>Registro / Doação</h2>

    <form method="post" action="Registro">
        <div class="form-group">
            <label asp-for="NomeCompleto">Seu nome completo</label>
            <input type="text" asp-for="NomeCompleto" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ComoQuerSerChamado">Como quer ser chamado</label>
            <input type="text" asp-for="ComoQuerSerChamado" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="text" asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Senha">Senha</label>
            <input type="password" asp-for="Senha" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmacaoSenha">Confirme a Senha</label>
            <input type="password" asp-for="ConfirmacaoSenha" class="form-control" />
        </div>
        <div class="form-group">
            <input type="image" src="~/img/120x53-doar-laranja.gif" formtarget="_blank" />
        </div>
    </form>
</div>

